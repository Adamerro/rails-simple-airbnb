<p style="color: green"><%= notice %></p>

<div class="container flat-details bg-light p-4 rounded shadow-sm">
  <h1 class="text-primary mb-4"><%= @flat.name %></h1>

  <div>
    <p class="flat-picture">
      <%= image_tag("https://picsum.photos/400/300?random=#{500 + @flat.id}", class: "card-img-top", alt: "Flat Image") %>
    </p>
  </div>

  <div class="flat-info mb-3">
    <p class="flat-address mb-2">
      <strong>Address:</strong>
      <span class="text-secondary"><%= @flat.address %></span>
    </p>
  </div>

  <div class="flat-info mb-3">
    <p class="flat-description mb-2">
      <strong>Description:</strong>
      <span class="text-secondary"><%= @flat.description %></span>
    </p>
  </div>

  <div class="flat-info mb-3">
    <p class="flat-price mb-2">
      <strong>Price per night:</strong>
      <span class="text-secondary"><%= number_to_currency(@flat.price_per_night) %></span>
    </p>
  </div>

  <div class="flat-info mb-3">
    <p class="flat-guests mb-2">
      <strong>Number of guests:</strong>
      <span class="text-secondary"><%= @flat.number_of_guests %></span>
    </p>
  </div>
</div>

<div class="action-buttons mt-4 d-flex justify-content-center">
  <% if current_user.admin? %>
    <%= link_to "Edit this flat", edit_flat_path(@flat), class: "btn btn-outline-secondary me-2 shadow-sm custom-btn" %>
    <%= button_to "Delete this listing", @flat, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger shadow-sm custom-btn" %>
  <% end %>
  <%= link_to "Back to flats", flats_path, class: "btn btn-outline-secondary me-2 shadow-sm custom-btn" %>
</div>
