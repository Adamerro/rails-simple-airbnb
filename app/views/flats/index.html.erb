<div class="light-grey">
  <div id="flats">
    <div class="row">
      <% @flats.each do |flat| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <%= link_to flat do %>
              <%= image_tag("https://picsum.photos/400/300?random=#{500 + flat.id}", class: "card-img-top", alt: "Flat Image") %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= flat.name %></h5>
              <p class="card-text"><%= truncate(flat.description, length: 100) %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to flat, class: "btn btn-sm btn-outline-primary", title: "See this flat" do %>
                    <i class="fas fa-house"></i> See this flat
                  <% end %>
                  <% if user_signed_in? && current_user.admin? %>
                    <%= link_to edit_flat_path(flat), class: "btn btn-sm btn-outline-warning", title: "Edit this flat" do %>
                      <i class="fas fa-pencil-alt"></i> Edit
                    <% end %>
                    <%= button_to flat, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger", title: "Delete this flat" do %>
                      <i class="fas fa-trash-alt"></i> Delete
                    <% end %>
                  <% end %>
                </div>
                <small class="text-muted">Price: <%= number_to_currency(flat.price_per_night) %></small>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
